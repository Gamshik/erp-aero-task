{
  "name": "erp-aero-task",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "cross-env DOTENV_CONFIG_PATH=.env.development nodemon -r dotenv/config -r tsconfig-paths/register --exec ts-node src/server.ts",
    "start": "cross-env DOTENV_CONFIG_PATH=.env.production node -r dotenv/config -r module-alias/register dist/server.js",
    "build": "tsc",
    "migrate:dev": "cross-env DOTENV_CONFIG_PATH=.env.development npx knex migrate:latest --knexfile src/infrastructure/db/knexfile.ts",
    "rollback:dev": "cross-env DOTENV_CONFIG_PATH=.env.development npx knex migrate:rollback --knexfile src/infrastructure/db/knexfile.ts",
    "migrate:prod": "cross-env DOTENV_CONFIG_PATH=.env.production npx knex migrate:latest --knexfile src/infrastructure/db/knexfile.ts",
    "rollback:prod": "cross-env DOTENV_CONFIG_PATH=.env.production npx knex migrate:rollback --knexfile src/infrastructure/db/knexfile.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gamshik/erp-aero-task.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Gamshik/erp-aero-task/issues"
  },
  "homepage": "https://github.com/Gamshik/erp-aero-task#readme",
  "_moduleAliases": {
    "@app": "dist/app",
    "@config": "dist/config/index",
    "@common": "dist/shared/common/index",
    "@db": "dist/infrastructure/db/index",
    "@multer": "dist/infrastructure/multer/index",
    "@file-storage": "dist/infrastructure/file-storage/index",
    "@user": "dist/modules/user/index",
    "@auth": "dist/modules/auth/index",
    "@file": "dist/modules/file/index",
    "@utils": "dist/shared/utils/index",
    "@middlewares": "dist/shared/middlewares/index"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "module-alias": "^2.3.4",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "mysql2": "^3.16.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/knex": "^0.15.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
