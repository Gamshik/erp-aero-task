{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",

    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,

    "baseUrl": "src",
    "paths": {
      "@app": ["app"],
      "@config": ["config/index"],
      "@common": ["shared/common/index"],
      "@db": ["infrastructure/db/index"],
      "@multer": ["infrastructure/multer/index"],
      "@file-storage": ["infrastructure/file-storage/index"],
      "@user": ["modules/user/index"],
      "@auth": ["modules/auth/index"],
      "@file": ["modules/file/index"],
      "@utils": ["shared/utils/index"],
      "@middlewares": ["shared/middlewares/index"]
    },

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
