{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",

    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,

    "baseUrl": "src",
    "paths": {
      "@app": ["app"],
      "@config": ["config/index"],
      "@common": ["shared/common/index"],
      "@db": ["infrastructure/db/index"],
      "@user": ["modules/user/index"],
      "@auth": ["modules/auth/index"],
      "@utils": ["shared/utils/index"],
      "@middlewares": ["shared/middlewares/index"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
